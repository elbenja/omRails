<div class="box">
    <%= link_to (image_tag pin.image(:medium)), pin %>
    <p class="description">
        <%= pin.description %>
    </p>
    <small>Posted by <strong><%= link_to pin.user.name, pin.user %>
        </strong>
    </small>
     <p>
        <% if current_user == pin.user %>
           
              <%= link_to 'Edit', edit_pin_path(pin) %>
              
           | 
        <% end %>
        <%= link_to 'Destroy', pin, method: :delete, data: {  } %>
     </p> 
</div>